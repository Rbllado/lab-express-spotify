<div class="albums">
    {{#each arrayAlbums}}
    <div class="album-container">
        <img class="album-img" src={{{this.images.1.url}}} alt="image">
        <div class="album-info-container">
            <p>{{{this.name}}}</p>
            <a href="/tracks/{{this.id}}">View Tracks</a>
        </div>
    </div>
    {{/each}}
</div>